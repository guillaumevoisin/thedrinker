{# Macro used for building forms (create and update) #}
{% macro form(title, form, delete_form) %}
	<div class="inner-content">

		<h1>{{ title }}</h1>

		<div class="td-form td-wrap">

			<div class="up-triangle"></div>
			
			{{ form(form) }}

			{% if delete_form %}
				<div class="delete">
					{{ form(delete_form) }}
				</div>
			{% endif %}
		
		</div>

	</div>
{% endmacro %}

{# Macro used for icon-based link #}
{% macro addItem(id, icon, link) %}
	<p class="add-item">
		<a href="{{ link }}" id="{{ id }}" class="buttonS"><img src="{{ asset('bundles/theme/images/icon/' ~ icon) }}" /></a>
	</p>
{% endmacro %}

{# Macro used for share buttons #}
{% macro shareButtons(recipe) %}
<div class="actions-buttons" data-recipe-id="{{ recipe.id }}">
                
    <div class="action favorite{% if app.user is null %} disabled{% endif %}{% if app.user and recipe in app.user.favoriteRecipes %} active{% endif %}">
        <a href="#">
        	<span class="icon"></span>
        </a>
    </div>

    <div class="action like">
        <a href="#">
        	<span class="number">{{ recipe.likes|length }}</span>
        	<span class="icon"></span>
        </a>
    </div>

    <div class="action comment">
        <a href="#">
        	<span class="number">{{ recipe.comments|length }}</span>
        	<span class="icon"></span>
        </a>
    </div>

</div>
{% endmacro %}