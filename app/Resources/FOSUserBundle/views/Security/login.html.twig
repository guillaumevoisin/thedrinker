{% extends '::base.html.twig' %}

{% block body %}

	<div class="inner-content">

		<h1>Login</h1>

		<form action="{{ path("fos_user_security_check") }}" method="post">

	        <div class="td-wrap td-form">
	    				
				<div class="formRow {{ attr['class']|default('') }}">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			        <div class="input-label"><label for="username">{{ 'security.login.username'|trans }}</label></div>
			        <div class="input-value"><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></div>
			        <div class="clear"></div>
			    </div>

			    <div class="formRow {{ attr['class']|default('') }}">
			        <div class="input-label"><label for="password">{{ 'security.login.password'|trans }}</label></div>
			        <div class="input-value"><input type="password" id="password" name="_password" required="required" /></div>
			        <div class="clear"></div>
			    </div>

			    <div class="formRow {{ attr['class']|default('') }}">
			        <div class="input-label"><label for="password"><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></label></div>
			        <div class="input-value"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></div>
			        <div class="clear"></div>
			    </div>

	    	</div>

	    	{% if error %}
			    <p>{{ error|trans }}</p>
			{% endif %}

	    	<p><input type="submit" id="_submit" name="_submit" class="buttonS bBlue" value="{{ 'security.login.submit'|trans }}" /></p>
	    	
    	</form>

    </div>

{% endblock %}